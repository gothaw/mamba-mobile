{
  "expo": {
    "name": "mamba-mobile",
    "slug": "mamba-mobile",
    "version": "1.0.0",
    "sdkVersion": "46.0.0",
    "orientation": "landscape",
    "icon": "./src/assets/img/app_icon.png",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "splash": {
      "image": "./src/assets/img/splash_screen.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "android": {
      "package": "com.radsoltan.mamba",
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/img/adaptive_app_icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "ios": {
      "requireFullScreen": true
    },
    "web": {
      "favicon": "./src/assets/img/app_icon.png"
    },
    "plugins": [
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "LANDSCAPE"
        }
      ]
    ]
  }
}
